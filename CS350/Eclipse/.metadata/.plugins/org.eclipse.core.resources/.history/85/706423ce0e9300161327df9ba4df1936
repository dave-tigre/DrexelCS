import java.util.Scanner;

/**
 * 
 */

/**
 * @author dave-tigre
 *
 */
public class SurveyMenu extends Menu{

	public String options[] = {"1) Create a new Survey","2) Display a Survey",
			"3) Load a Survey","4) Save a Survey", "5) Quit"};
	/**
	 * 
	 */
	public SurveyMenu() {
		// TODO Auto-generated constructor stub
		System.out.println("Survey Menu");
		displayOptions();
	}
	
	public void displayOptions()
	{
		display(options);
		System.out.println();
		String choice = getResponse();
		
		switch(choice)
		{
		case "1": creationMenu();
				break;
		default: System.out.println("Invalid Input");
				break;
		}
	}
	
	public void creationMenu()
	{
		Test newTest = new Test();
		System.out.println("Name this Survey: ");
		Scanner input = new Scanner(System.in);
		newTest.setTestName(input.nextLine());
		
	}
	

}
