import java.util.ArrayList;
import java.util.Scanner;

/**
 * 
 */

/**
 * @author dave-tigre
 *
 */
public abstract class Menu {
	
	private String menuPrompt;
	private int choice;

	public Menu(){
		System.out.println("Creating new Menu");
	}
	
	public void setMenuPrompt(String menuPrompt)
	{
		this.menuPrompt = menuPrompt;
	}
	
	public void displayOptions()
	{
		System.out.println("1) Survey Menu");
		System.out.println("2) Test Menu");
		System.out.println();
		getUserResponse();
	}
	
	public Menu getUserResponse()
	{
		Scanner input = new Scanner(System.in);
		int choice = input.nextInt();
		this.choice = choice;
		input.close();
		switch(choice)
		{
		case 1: SurveyMenu sMenu = new SurveyMenu();
				return sMenu;
				break;
		case 2: TestMenu tMenu = new TestMenu();
				return tMenu;
				break;
		}
		SurveyMenu safeMenu = new SurveyMenu();
		return safeMenu;
	}
	
}
