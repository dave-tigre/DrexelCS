    private String response;


    /**
     * @return
     */
    public Response getUserResponse(Response newResponse) {
    	Scanner input = new Scanner(System.in);
    	String resp = input.nextLine();
    	newResponse.setUserResponse(resp);
    	return newResponse;
    }

    /**
     * @param inputResponse
     */
    public void setUserResponse(String inputResponse) {
        // TODO implement here
    	this.response = inputResponse;
    }

    /**
